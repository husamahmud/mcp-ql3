{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*",
				"api/*"
			]
		},
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"include": [
		"src/**/*",
		"api/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
